@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Search for GitHub Repositories</h1>
</div>

<div class="text-center mt-3">
    <form>
        <div class="input-group">
            <input class="form-control" id="search-input" placeholder="Search for a repo" aria-label="Search for a repo" aria-describedby="search-button" />
            <button class="btn btn-lg btn-outline-primary" id="search-button">Search</button>
        </div>
    </form>
</div>

<template id="repo-template">
    <div class="col-md-1 px-0 pe-0 mx-0">
        <img src="https://placehold.co/200x300" width="200" />
    </div>
</template>

<div class="mt-3">
    <div id="search-results" class="row g-0">
        @* JS will instantiate the template and put a bunch of them here.*@
    </div>
</div>
