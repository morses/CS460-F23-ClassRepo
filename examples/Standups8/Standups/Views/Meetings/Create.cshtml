@model Standups.Models.Supmeeting

@{
    ViewBag.Title = "Create meeting report";
    Model.ReadOnly = false;
}

<div class="row justify-content-center">
    <div class="col text-center">
        <h1>Stand-Up Meeting <span class="fs-4">Report Form</span></h1>
        <hr />
    </div>
</div>

<div class="container-fluid">
    @using (Html.BeginForm("Create", "Meetings", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            @Html.Partial("_ReportDetailsPartial", Model)
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }
    <div>
        @Html.ActionLink("Back to All Reports", "Index")
    </div>
</div>

