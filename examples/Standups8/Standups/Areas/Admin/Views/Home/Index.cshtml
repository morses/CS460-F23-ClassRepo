@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-center">
    <div class="col text-center">
        <h2>Administration Dashboard</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>View and Approve Comments</h3>
        <select name="comment-select" id="comment-select" class="form-select form-select-lg mb-3" aria-label="Select which comments to view" style="max-width: 80%;">
            <option value="" selected>--Please choose an option--</option>
            <option value="all">All</option>
            <option value="new">New</option>
            <option value="approved">Approved</option>
            <option value="rejected">Rejected</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col">
        <table id="comment-table" class="table">
            
        </table>
    </div>
</div>


@section Scripts
{
    <script src="~/js/admin_dashboard.js"></script>
}